<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    //main vertical layout , including 7 rows vertically.
    //first row has url text box and fetch btn
    //next 5 rows contain 4 imageViews each horizontally
    //last row shows progress bar

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <EditText
            android:id="@+id/url"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="https://stocksnap.io"
            android:layout_marginRight="7dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/fetch"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:text="Fetch"
            android:textAllCaps="false"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/tag_flower"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tag_f" />
        <Button
            android:id="@+id/tag_love"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="@string/tag_l"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            />
        <Button
            android:id="@+id/tag_biz"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="@string/tag_b"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            />
        <Button
            android:id="@+id/tag_travel"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="@string/tag_t"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            />
    </LinearLayout>

    <LinearLayout
